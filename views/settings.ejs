           <%- include('tiles/sideOptions'); %>
          </div>
      </div>
    </nav>

      <div class=container> 
        <div class= "main-content">
          <% errors.forEach(err=>{%>
              <script>
                $(document).ready(()=>{
                      $.notify({
                            title: "Error,",
                            icon:"fa fa-exclamation-triangle",
                            message: <%-JSON.stringify(err)%>
                            },
                            {
                                type: 'danger'
                            }
                            , {
                              newest_on_top: true
                            }
                        );
                });
              </script>
          <%});%>
           <% if(success) { %>
             <script>
                $(document).ready(()=>{
                      $.notify({
                            title: "Success,",
                            icon:"fa fa-thumbs-up",
                            message: <%- JSON.stringify(success)%>
                            },
                            {
                                type: 'success'
                            }
                            , {
                              newest_on_top: true
                            }
                        );
                });
              </script>
         <%}%>

         <script>
          var isPremium = <%=-data.isPremium%>;
          </script>

        <div class="create-wrapper">
            <div class="col-md-12">
              <span>
                <p>
                 Hello <span id="user-name"></span>!
                </p>
                <p>
                 Your account is linked with the email: <span id="user-email"></span>
                </p>
                 <p><bold>Subscription type: </bold><span id="user-plan"> </span> <button type="button" data-toggle="tooltip" data-placement="right" title="More plans are coming soon, if you can't wait email us to: contact@flashcard-x.com" class="fa fa-info" aria-hidden="true"></button></p>
                <p>
                  You are using <%=data.maxLimit - data.cardsLeft%> cards out of <%=data.maxLimit%> which is your max limit, for increasing your limit you will need a better subscription plan 
                </p>
              </span>
            </div>

        </div>

        <div class="create-wrapper">
          <div class="col-md-12">
            <span>
            <p><bold>Change languaje:</bold></p>
              <form class="form-horizontal" action= "#" method="post">
                  <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
                 <div class="form-group">
                   <div class="col-md-2"></div>
                   <div class="input-group col-md-8 ev-col-centered">
                       <select name="lang" class="form-control" id="select-lang">
                      </select>
                    <button role="button" type="submit" class="left-margin btn btn-default btn-success btn-gray">Save</button>
                   </div>
                 </div>
              </form>
            </span>
          </div>

        </div>

    </div>
    <%- include('tiles/modalActivity'); %>
      </div>

