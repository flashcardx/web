        <div class="row">
          <div class="col-md-6">
            <h1>Learn new languages with beautiful images</h1>
            <p></p>
            <button OnClick="location.href='/auth/facebook'" class="button loginBtn loginBtn--facebook">
             Continue with Facebook
            </button>
        </div>
          <div class="col-md-6">
              <form class="form-horizontal" id="form-signup" action= "/signup" method="post">
              <input type="hidden" name="_csrf" value="<%=csrfTokenLogin%>"/>
           <div class="form-group">
                <label class="control-label col-sm-2" for="email">Email:</label>
                <div class="col-sm-10">
                <input name="email" type="email" required="true"class="form-control" id="email" placeholder="Your email">
                </div>
            </div>
             <div class="form-group">
                <label class="control-label col-sm-2" for="name">Name:</label>
                <div class="col-sm-10">
                <input name="name" type="text" class="form-control" id="name" placeholder="Your name(or how your friends call you)">
                </div>
            </div>
           
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd">Password:</label>
                <div class="col-sm-10"> 
                <input minlength="4" required="true" type="password" name="password" class="form-control" id="pwd" placeholder="Enter password">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2" for="pwd2">Verify Password:</label>
                <div class="col-sm-10"> 
                <input minlength="4" required="true" type="password" name="password2" class="form-control" id="pwd2" placeholder="Enter password again">
                </div>
            </div>
          
            <div class="form-group"> 
                <div class="col-sm-offset-2 col-sm-10">
                <button onClick="fillLangs();" type="button" data-toggle="modal" data-target="#set-lang-modal" role="button" class="btn btn-success">Sign up!</button>
                </div>
            </div>
        </form>

            
