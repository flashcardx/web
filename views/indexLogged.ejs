  <div class= "main-content">
      <% errors.forEach(err=>{%>
            <div class="alert alert-danger">
                <strong>Error!</strong> <%= err%>
            </div> 
        <%});%>

  <div class="col-2 filters">
                <div class="filter-container">
                <span>  Category:</span>
                  <select name="category" class="form-control filter-margin" id="category-select">
                    </select>
                </div>
                    <div class="filter-container">
                    <span>  Sort by:</span>
                  <select name="sort" class="form-control filter-margin" id="sort-select">
                        <option selected="selected" value="desc">Newer first</option>
                        <option value="asc">Older first</option>
                    </select>
                    </div>  
              </div>
              
          <div class="row">
              <div class="col-10">
                  <div class="card-deck" id="card-deck">
                  </div>
              </div>
            
          </div>


    <div class="modal fade" id="new-category-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <input type="text" class="form-control" id="new-category" placeholder="Category's name">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" onCLick="newCategory()" data-dismiss="modal" class="btn btn-primary">Add category</button>
      </div>
    </div>
  </div>


   


