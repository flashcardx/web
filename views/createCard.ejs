          </li>
        </ul>
         <a data-toggle='tooltip' data-placement='right' title='Settings' class="round btn btn-warning my-2 my-sm-0 " href="/settings"> <i class="fa fa-cog fa-fw" aria-hidden="true"></i></a>
        <a data-toggle='tooltip' data-placement='right' title='Sign out' class="round btn btn-danger my-2 my-sm-0 btn-space-left" href="/logout"> <i class="fa fa-sign-out fa-fw" aria-hidden="true"></i></a>
       </div>
    </div>
  </nav>
  <div class="container">
    <div class="col-md-12 col-12">
      <div class="create-wrapper">
        <% errors.forEach(err=>{%>
           <script>
                $(document).ready(()=>{
                      $.notify({
                            title: "Error,",
                            icon:"fa fa-exclamation-triangle",
                            message: <%-JSON.stringify(err)%>
                            },
                            {
                                type: 'danger'
                            }
                            , {
                              newest_on_top: true
                            }
                        );
                });
              </script>
          <%});%>
            <% if(success){%>
              <script>
                $(document).ready(()=>{
                      $.notify({
                            title: "Success,",
                            icon:"fa fa-thumbs-up",
                            message: <%- JSON.stringify(success)%>
                            },
                            {
                                type: 'success'
                            }
                            , {
                              newest_on_top: true
                            }
                        );
                });
              </script>
              <%};%>

                <form enctype="multipart/form-data" class="form-horizontal " action="#" method="post">
                  <input type="hidden" name="_csrf" value="<%=csrfToken%>" />
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-10 ev-easyautocomplete">
                        <input name="name" type="text" required="true" class="form-control" id="title" placeholder="What is it?">
                      </div>
                    </div>
                  </div> 
                  <div class="form-group">
                    <div class="row">
                      <div class="col-sm-10">
                         <textarea rows="5" name="description" type="text" class="form-control" id="description" placeholder="A description of the word"></textarea>
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-lg-9 col-md-9 col-sm-12">
                        <select name="category" class="form-control" id="category">
                              <option selected="selected" value="">No category</option>
                          </select>
                       </div>
                       <div class="col-lg-2 col-md-12 col-sm-12 ev-margin-top">
                          <button role="button" class="left-margin btn btn-warning " type="button" data-toggle="modal" data-target="#new-category-modal">Add new category</button>
                      </div>
                    </div>
                  </div>

                  <div class="picure-load">
                    <div id="custom-search-input">
                      <div class="row">
                        <div class="input-group col-lg-9 col-md-9 col-sm-12">
                          <input id="search-box" onkeydown="if (event.keyCode == 13) return false;" type="text" class=" form-control input-lg"
                            placeholder="Search image" />
                          <span class="input-group-btn">
                                    <button id ="search-button" class="btn btn-success" role="button" type="button" onClick="search()">
                                        <i class="fa fa-search fa-fw" aria-hidden="true"></i>
                                    </button>
                                </span>
                        </div>
                        <div class="col-lg-2 col-md-12 col-sm-12 ev-margin-top">
                            <button role="button" class="left-margin btn btn-success " type="button" onclick="chooseFile();">Upload image</button>
                        </div>
                      </div>
                      <div class="image-gallery">
                        <div id="gallery">
                        </div>
                      </div>
                      <div id="addButton">
                      </div>
                    </div>

                    <div  class="input-group col-sm-10 row">
                              <div style='border: 1px solid black;' class="col-md-offset-1">
                              <div id="wrap-img1" class="img-wrap">
                                    <span id="close1" class="close" onClick="closeImg(1);">&times;</span>
                                    <img class="resize-img img-responsive" src="assets/img/no-image.png" />
                                    <input id="img1" type="hidden" name="img1" value=""> </input>
                                    <input id="height1" type="hidden" name="height1" value=""> </input>
                                    <input id="width1" type="hidden" name="width1" value=""> </input>
                                    <div style="height:0px;overflow:hidden">
                                        <input accept="image/*" type="file" onchange="readURL(this, 1);" id="fileInput1" name="fileInput1" ></input>
                                    <div style="height:0px;overflow:hidden">
                                    </div>
                              </div>
                              </div>
                              <div id="wrap-img2" class="img-wrap">
                                    <span id="close2" class="close" onClick="closeImg(2);"> &times;</span>
                                    <img class="resize-img img-responsive" src="assets/img/no-image.png" />
                                    <input id="img2" type="hidden" name="img2" value=""> </input>
                                    <input id="height2" type="hidden" name="height2" value=""> </input>
                                    <input id="width2" type="hidden" name="width2" value=""> </input>
                                    <div style="height:0px;overflow:hidden">
                                        <input accept="image/*" type="file"  onchange="readURL(this, 2);" id="fileInput2" name="fileInput2" />
                                    </div>
                              </div>
                              

                                <div id="wrap-img3" class="img-wrap">
                                    <span id="close3" class="close" onClick="closeImg(3);">&times;</span>
                                     <img class="resize-img img-responsive" src="assets/img/no-image.png" />
                                        <input id="img3" type="hidden" name="img3" value=""> </input>
                                    <input id="height3" type="hidden"  name="height3" value=""> </input>
                                    <input id="width3" type="hidden" name="width3" value=""> </input>
                                    <div style="height:0px;overflow:hidden">
                                        <input accept="image/*" type="file" id="fileInput3" onchange="readURL(this , 3);" name="fileInput3" />
                                    </div>
                                </div>
                        </div>
                    </div>

                    </div>
                  </div>

                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <button role="button" type="submit" class="btn btn-default btn-outline-success btn-gray">Create!</button>
                    </div>
                  </div>
                </form>
                <div class="inline">
                  <span class="text-black">Autocomplete:</span>
                  <input type="checkbox" class="js-switch" checked />
                </div>


                <div class="modal fade" id="new-category-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New category</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                      </div>
                      <div class="modal-body">
                        <input type="text" class="form-control" id="new-category" placeholder="Category's name">
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" onCLick="newCategory()" data-dismiss="modal" class="btn btn-primary">Add category</button>
                      </div>
                    </div>
                  </div>
                </div>
      </div>
    </div>
  </div>

  <%- include('tiles/footer'); %>





