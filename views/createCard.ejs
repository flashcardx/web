      <% errors.forEach(err=>{%>
            <div class="alert alert-danger">
                <strong>Error!</strong> <%= err%>
            </div> 
        <%});%>
        <% if(success){%>
            <div class="alert alert-success">
                <strong>Success!</strong> <%= success%>
            </div>
            <script>
              window.setTimeout(function() {$(".alert-success").fadeTo(500, 0).slideUp(500, function(){
              $(this).remove(); 
                 });
              }, 4000);
            </script>
        <%};%>
   
         <form enctype="multipart/form-data"  class="form-horizontal " action= "#" method="post">
          <input type="hidden" name="_csrf" value="<%=csrfToken%>"/>
            <div class="form-group">
                <div class="col-sm-10">
                <input name="name" type="text" required="true"class="form-control" id="title" placeholder="CardÂ´s title">
                </div>
            </div>
             <div class="form-group">
                <div class="col-sm-10">
                <input name="description" type="text" class="form-control" id="description" placeholder="What is it?">
                </div>
            </div>          
            
            <div class="picure-load">
                  <div id="custom-search-input">
                      <div class="input-group col-sm-12">
                         <input id="search-box"  onkeydown="if (event.keyCode == 13) return false;"type="text" class="col-sm-8 form-control input-lg" placeholder="Search image" />
                          <span class="input-group-btn">
                              <button id ="search-button" class="btn btn-info" role="button" type="button" onClick="search()">
                                  <i class="fa fa-search fa-fw" aria-hidden="true"></i>
                              </button>
                          </span>
                      <span style="margin-left:6px;margin-right:6px;">OR</span>
                      <button role="button" class=" btn btn-info redText" type="button" onclick="chooseFile();">Upload image</button>
                      </div>
                      <div class = "image-gallery">
                        <div id="gallery">
                        </div>
                        <div id="pagination-container">
                              

                        </div>
                      </div>
                      <div id="addButton">
                      </div>
                  </div>
                                    
